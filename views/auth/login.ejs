<div class="container">
    <form action="/login" method="post">
      <div class="form-group">
        <h3 class="text-center">Login</h3>
        <label for="exampleInputEmail1">Email address</label>
        <% try { %>
          <% login.warning %>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="username" value=<%= login.username %>>
          <% } catch { %>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="username">
        <% } %>
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        <% try { %>
          <% if (login.warning == "noUser") { %>
            <small id="usernameMessage" class="form-text text-danger">Email is not a registered user</small>
          <% } else if (login.warning == "missingEmail") { %>
            <small id="passwordMessage" class="form-text text-danger">Please enter an email</small>
          <% } %>
        <% } catch {} %>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
        <% try { %>
          <% if (login.warning == "badPassword") { %>
            <small id="passwordMessage" class="form-text text-danger">Password does not match email address</small>
          <% } %>
        <% } catch {} %>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>