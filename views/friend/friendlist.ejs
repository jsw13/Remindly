<div class="container" style="max-width: 840px">

        <% users.splice(1).forEach(user => { %>
            <div class="container">
                <div class="row align-items-center border border-primary my-2 py-3">
                    <div class="col-auto">
                        <img src=<%= user.picture[1] %> class="img-thumbnail mr-2" width="100px">
                    </div>
                    <div class="col-2">
                        <%= user.username %>
                    </div>
                    <div class="col-3">
                        <%= user.email %>
                    </div>
                    <div class="col-auto ml-auto">
                    <% if (users[0].friends.includes(user.email)) { %>
                        <form class="deleteForm "method="POST" action=<%= "/friends/delete/" + user.email %>>
                            <button type="submit" class="btn btn-outline-danger">Remove Friend</button>
                        </form>
                    <% } else { %>
                        <form class="addForm "method="POST" action=<%= "/friends/add/" + user.email %>>
                            <button type="submit" class="btn btn-outline-success">Add Friend</button>
                        </form>
                    <% } %>
                    </div>
                </div>
            </div>
        <% }) %>

</div>